<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:src="@drawable/returnback"
            android:layout_gravity="center"
            android:gravity="left" />

        <TextView
            android:layout_marginLeft="-50sp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设备详情"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="待处理"
            android:textSize="25sp"
            tools:ignore="Suspicious0dp"

            />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="使用中"
            android:textSize="25sp"
            android:layout_weight="2"
            tools:ignore="Suspicious0dp"
            android:textColor="#4E59C4" />

        <TextView
            android:id="@+id/inreturn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="已归还"
            android:textSize="25sp"
            android:layout_weight="2"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>

    //图片与大框架

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginTop="7sp"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="40px"
                android:background="@drawable/mache2" />


            //文字

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"

                        android:text="齐心加厚订书机"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:background="@drawable/button_style3"
                        android:gravity="center"
                        android:text="剩1天"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"

                        android:text="设备编号:1093"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-19-3"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"

                        android:text="借出时间:2021-01-10 10:36"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="应还时间:2021-01-11 10:35"
                        android:textSize="15sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="续借"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="外带"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/repairs"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:onClick="show"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    //设备

    //图片与大框架

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="40px"
                android:background="@drawable/mache1" />


            //文字

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"

                        android:text="梳式文本装订机"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:background="@drawable/button_style3"
                        android:gravity="center"
                        android:text="剩2天"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"

                        android:text="设备编号:1092"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-19-2"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"

                        android:text="借出时间:2021-01-12 10:36"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="应还时间:2021-01-14 10:35"
                        android:textSize="15sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="续借"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:onClick="show1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="外带"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="40px"
                android:background="@drawable/mache10" />


            //文字

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:layout_marginLeft="20sp"
                        android:text="知用电流互感器"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_marginBottom="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/key" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:background="@drawable/button_style3"
                        android:gravity="center"
                        android:text="剩1天"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="设备编号:1097"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/button_style14"
                            android:gravity="center"
                            android:text="重要"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-21-3"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"

                        android:text="借出时间:2021-01-11 14:52"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="应还时间:2021-01-12 14:53"
                        android:textSize="15sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:onClick="show2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="续借"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button

                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="外带"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
