<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <ImageView
            android:layout_width="0dip"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:src="@drawable/returnback"
            android:layout_gravity="center"
            android:gravity="left"/>
        <TextView
            android:layout_marginLeft="-50sp"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="17"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设备收藏"
            android:textColor="#000000"
            android:textSize="30sp"/>
    </LinearLayout>

    //图片与大框架

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="380dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:background="@drawable/mache1" />


            //文字

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="189dp"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:text="梳式文本装订机"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="设备编号:1092"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-19-3"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="设备型号:CTA60"
                        android:textSize="20sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="归还时间:2021-01-10 10:36"
                android:textSize="15sp" />


            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_style2"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

