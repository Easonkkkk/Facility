<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:src="@drawable/returnback"
            android:layout_gravity="center"
            android:gravity="left" />

        <TextView
            android:layout_marginLeft="-50sp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设备详情"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="待处理"
            android:textSize="25sp"
            tools:ignore="Suspicious0dp"

            />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="使用中"
            android:textSize="25sp"
            android:layout_weight="2"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="已归还"
            android:textSize="25sp"
            android:layout_weight="2"
            tools:ignore="Suspicious0dp"
            android:textColor="#4E59C4"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="#EEEEF0" />
    //图片与大框架

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:background="@drawable/mache1" />


            //文字

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="189dp"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:text="梳式文本装订机"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备编号:1092"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-19-3"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备型号:CTA60"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="归还时间:2021-01-10 10:36"
                        android:textSize="17sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="167dp"
                android:background="@drawable/button_style2"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/command"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    //设备

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:background="@drawable/mache3" />


            //文字

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="189dp"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:text="UNITROL相移控制板"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备编号:1097"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-21-3"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备型号:WDU28"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="归还时间:2021-01-10 10:36"
                        android:textSize="15sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="167dp"
                android:background="@drawable/button_style2"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="339dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:background="@drawable/button_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="80px"
                android:background="@drawable/mache4" />


            //文字

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //标题文字

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="189dp"
                        android:layout_height="30sp"
                        android:text="指针式万用表"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginLeft="23sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备编号:1091"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备位置:10-18-3"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"

                        android:text="设备型号:SUX23"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="归还时间:2021-01-10 10:36"
                        android:textSize="15sp" />

                </LinearLayout>
                //详情图标

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EEEEF0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">


            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="167dp"
                android:background="@drawable/button_style2"
                android:text="报修"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/button_style2"
                android:text="评价"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>