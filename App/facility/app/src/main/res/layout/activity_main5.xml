<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="80sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:text="欢迎回来"
                android:textColor="#E7E3FF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33sp"
                android:text="王晓玥"
                android:textColor="#ffffff"
                android:textSize="32sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:src="@drawable/people"></ImageView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="346dp"
        android:layout_height="151dp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/layout_css">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="100sp"
            android:gravity="center"
            android:text="我的设备统计"
            android:textColor="#6772E5"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/examine"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginLeft="37sp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#5E69E2"
                android:textSize="50sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="111dp"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="待审批"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="130sp"
            android:layout_marginTop="55sp"
            android:background="#C2BBF5" />

        <LinearLayout
            android:id="@+id/inuse"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="132sp"
            android:layout_marginTop="30sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37sp"
                android:layout_weight="2"
                android:text="3"
                android:textColor="#5E69E2"
                android:textSize="50sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="使用中"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="240sp"
            android:layout_marginTop="55sp"
            android:background="#C2BBF5" />

        <LinearLayout
            android:id="@+id/inreturn"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="240sp"
            android:layout_marginTop="30sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37sp"
                android:layout_weight="2"
                android:text="3"
                android:textColor="#5E69E2"
                android:textSize="50sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:text="已归还"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="343dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/layout_css">

        <TextView
            android:layout_width="50sp"
            android:layout_height="80sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="3sp"
            android:text="通知公告"
            android:textColor="#37298C"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="70sp"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="7sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="250sp"
                android:layout_height="25sp"
                android:layout_marginTop="3sp"
                android:text="关于12月31日设备盘点的通知"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250sp"
                android:layout_height="25sp"
                android:text="关于11月新增和报废设备统计的公告"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/img_shape">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/scan1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="70sp"
            android:gravity="center"
            android:text="扫一扫"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/img_shape">

        <ImageView
            android:layout_marginLeft="40sp"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_gravity="center"
            android:layout_marginTop="70sp"
            android:gravity="center"
            android:text="归还设备"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="195sp"
        android:layout_marginTop="-110sp"
        android:background="@drawable/img_shape">

        <ImageView
            android:id="@+id/search"
            android:layout_marginLeft="40sp"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:src="@drawable/equip" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_gravity="center"
            android:layout_marginTop="70sp"
            android:gravity="center"
            android:text="设备查询"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="195sp"
        android:layout_marginTop="-240sp"
        android:background="@drawable/img_shape">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"

            android:gravity="center"
            android:src="@drawable/transfer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_gravity="center"
            android:layout_marginTop="70sp"
            android:gravity="center"
            android:text="设备流转"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="160sp"
        android:background="#848FFF"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="65sp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:src="@drawable/main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_gravity="center"
                android:textSize="15sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50sp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:src="@drawable/work" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="功能"
                android:textSize="15sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/personal"
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:layout_gravity="center"
                android:textSize="15sp"></TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



