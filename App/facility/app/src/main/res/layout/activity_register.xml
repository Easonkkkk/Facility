<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="30sp"
            android:layout_weight="2"
            android:src="@drawable/returnback2"
            android:layout_gravity="center"
            android:gravity="left"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="-50sp"
            android:layout_weight="17"
            android:gravity="center"
            android:text="欢迎注册"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="456dp"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="45sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/tel"></ImageView>

            <EditText
                android:id="@+id/phone"
                android:layout_width="246dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="请输入电话号码"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
        //电话号

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/confirm"></ImageView>

            <EditText
                android:id="@+id/confirm"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:background="@drawable/button_style6"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
        //验证码

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/pass"></ImageView>

            <EditText
                android:id="@+id/pass1"
                android:layout_width="246dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="请输入密码"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
        //密码1

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/pass"></ImageView>

            <EditText
                android:id="@+id/pass2"
                android:layout_width="249dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="请再次输入密码"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColorHint="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-30sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="确认注册"
            android:textColor="#6772E5"
            android:textSize="25sp" />


    </LinearLayout>


</LinearLayout>